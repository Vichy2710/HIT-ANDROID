<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LogIn"
    android:padding="18dp"
    >
    <LinearLayout
        android:id="@+id/LogIn_AppName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="130dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#7f00ff"
            android:text="Bloomi"
            android:textSize="40dp"
            android:gravity="center"
            android:fontFamily="@font/fs_playlist"></TextView>
    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/LogIn_EmailLayout"
        app:layout_constraintTop_toBottomOf="@id/LogIn_AppName"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/LogIn_Email"

            android:background="@drawable/input_border"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_regular"
            android:inputType="text|textNoSuggestions"
            android:hint="Email Address"
            android:textColorHint="@color/black"
            android:textSize="15dp"
            android:textCursorDrawable="@null"></com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/LogIn_PasswordLayout"
        app:layout_constraintTop_toBottomOf="@id/LogIn_EmailLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        app:boxStrokeWidth="0dp"
        app:boxStrokeWidthFocused="0dp"
        >
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/LogIn_Password"
            android:background="@drawable/input_border"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_regular"
            android:inputType="textPassword|textNoSuggestions"
            android:hint="Password"
            android:textColorHint="@color/black"
            android:textSize="15dp"
            android:textCursorDrawable="@null"
            ></com.google.android.material.textfield.TextInputEditText>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/LogIn_ForgotPassword"
        app:layout_constraintTop_toBottomOf="@id/LogIn_PasswordLayout"
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#7f00ff"
        android:text="Forgot Password?"
        android:textSize="20dp"
        android:gravity="right"
        android:fontFamily="@font/poppins_medium"
        ></TextView>
    <LinearLayout
        android:id="@+id/LogIn_LogInLayout"
        app:layout_constraintTop_toBottomOf="@id/LogIn_ForgotPassword"
        android:layout_marginTop="22dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/big_button"
        android:elevation="10dp"
        >
        >
        <TextView
            android:id="@+id/LogIn_LogIn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:text="Log In"
            android:textSize="18dp"
            android:gravity="center"
            android:fontFamily="@font/poppins_semibold"
            ></TextView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/LogIn_or"
        app:layout_constraintTop_toBottomOf="@id/LogIn_LogInLayout"
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:weightSum="13"
        android:orientation="horizontal">
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="5"
            android:layout_gravity="center_vertical"
            android:background="#dedede"></TextView>
        <TextView
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:fontFamily="@font/poppins_medium"
            android:text="OR"
            android:textSize="20dp"
            android:textColor="@color/black"></TextView>
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="2dp"
            android:layout_weight="5"
            android:layout_gravity="center_vertical"
            android:background="#dedede"></TextView>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/LogIn_SignInWithGoogle"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/sign_in_with_button"
        app:layout_constraintTop_toBottomOf="@id/LogIn_or"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_medium"
            android:gravity="center"
            android:text="Sign in with Google"
            android:textColor="@color/black"
            android:textSize="18dp"></TextView>
        <ImageView
            android:layout_width="25dp"
            android:layout_height="70dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:src="@drawable/google_icon"></ImageView>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/LogIn_SignInWithGoogle"
        android:gravity="center">
        <TextView
            android:fontFamily="@font/poppins_regular"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="#788095"
            android:textSize="16dp"
            android:text="Don't have an account?"></TextView>
        <TextView
            android:id="@+id/LogIn_CreateAccount"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center_vertical"
            android:textColor="#9f40ff"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="16dp"

            android:text=" Create account"></TextView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>