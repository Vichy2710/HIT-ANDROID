<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChiTietMonAn"
    android:background="#FFDDCC">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#FF4848">

        <TextView
            android:id="@+id/backToMain"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="17dp"
            android:drawableRight="@drawable/ic_baseline_arrow_back_24"></TextView>

        <TextView
            android:id="@+id/tenmon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Món Ăn"
            android:textColor="@color/white"
            android:textSize="25dp"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="350dp"
            android:drawableRight="@drawable/ic_baseline_download_24_1"></TextView>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <ImageView

                    android:id="@+id/avt_monan"
                    android:layout_width="600px"
                    android:layout_height="600px"
                    android:layout_gravity="center"></ImageView>

                <TextView
                    android:textColor="#373737"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Nguyên liệu"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:textColor="#373737"
                    android:text=""
                    android:textSize="17dp"
                    android:id="@+id/nguyenlieu_monan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"></TextView>

                <TextView
                    android:textColor="#373737"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Công thức"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:textColor="#373737"

                    android:textSize="17dp"
                    android:text=""
                    android:id="@+id/congthuc_monan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"></TextView>
                <TextView
                    android:textColor="#373737"

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Chi phí:"
                    android:textSize="20dp"
                    android:textStyle="bold"></TextView>

                <TextView
                    android:textColor="#373737"

                    android:text=""
                    android:textSize="19dp"
                    android:id="@+id/chiphi_monan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"></TextView>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>